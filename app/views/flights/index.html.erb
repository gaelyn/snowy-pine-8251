<h1>Flights</h1>

<% @flights.each do |flight| %>
  <section id="flight-<%=flight.id %>">
    <h3>Flight Number: <%= flight.number %> Airline: <%= flight.airline.name %></h3>
    <p>Passengers:</p>
    <% flight.passengers.each do |passenger| %>
      <p>* <%= passenger.name %></p>
    <% end %>
  </section>
<% end %>
